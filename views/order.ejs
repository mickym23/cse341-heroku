<body>
    <%- include('includes/nav.ejs') %>

<main class="order-main">
    <h1>My Orders</h1>
   <% if (orders.length <= 0) { %>
       <h2>Nothing there!</h2>
   <% } else { %>
       <ul class="orders">
           <% orders.forEach(order => { %>
               <li class="order-container">
                   <h2>Order - # <%= order._id %></h2>
                   <ul class="order-list">
                       <% order.fruits.forEach(f => { %>
                           <li><%= f.fruit.name %> (<%= f.quantity %>)</li>
                       <% }); %>
                   </ul>
               </li>
           <% }); %>
       </ul>
   <% } %>
</main>

